{% extends 'StudenciakBundle:Page:base.html.twig' %}

{% block title %}
	Dodaj przemiot
{% endblock %}

{% block general %}
	active
{% endblock %}
{% block przedmiot %}
	active
{% endblock %}

{% block view %}
	<div class="db-breadcrumbs">
		<a class="db-brdcmb-item" href="#">
			<i class="icon-home"></i>
		</a>
		<a class="db-brdcmb-item" href="#">
			Ogólne
		</a>
		<a class="db-brdcmb-item" href="#">
			Zajęcia
		</a>
	</div>

	{% if app.session.get('admin') == 1 %} 


		<div class="db-logged" >
			<h2>Dodawanie przedmiotu</h2>
			<br />


			{{ form_start(form) }}
			{{ form_errors(form) }}

			<table>
				<tr>
					<td>{{ form_label(form.nazwa) }}</td>
					<td><span class="form-text-input">{{ form_widget(form.nazwa) }}{{ form_errors(form.nazwa) }}</span></td>
				</tr>
				<tr>
					<td>{{ form_label(form.haslo) }}</td>
					<td><span class="form-text-input">{{ form_widget(form.haslo) }}{{ form_errors(form.haslo) }}</span></td>
				</tr>
				<tr>
					<td>{{ form_label(form.semestr) }}</td>
					<td>{{ form_widget(form.semestr) }}{{ form_errors(form.semestr) }}</td>
				</tr>
				<tr>
					<td colspan="2"><input type="submit" value="Dodaj przedmiot" /></td>
				</tr>
			</table>

			

			{{ form_end(form) }}

		</div>







	{% endif %}
{% endblock %}


{% extends 'StudenciakBundle:Page:base.html.twig' %}

{% block title %}
	Dodaj zajecia
{% endblock %}

{% block general %}
	active
{% endblock %}
{% block przedmiot %}
	active
{% endblock %}

{% block view %}
	<div class="db-breadcrumbs">
		<a class="db-brdcmb-item" href="#">
			<i class="icon-home"></i>
		</a>
		<a class="db-brdcmb-item" href="#">
			Ogólne
		</a>
		<a class="db-brdcmb-item" href="#">
			Zajęcia
		</a>
	</div>

	{% if app.session.get('admin') == 1 %} 


		<div class="db-logged" >
			<h2>Dodawanie zajęć</h2>
			<br />


			{{ form_start(form) }}
			{{ form_errors(form) }}

			<table>
				<tr>
					<td>{{ form_label(form.id_osoby) }}</td>
					<td>{{ form_widget(form.id_osoby) }}{{ form_errors(form.id_osoby) }}</td>
				</tr>
				<tr>
					<td>{{ form_label(form.typ_zajec) }}</td>
					<td>{{ form_widget(form.typ_zajec) }}{{ form_errors(form.typ_zajec) }}</td>
				</tr>
				<tr>
					<td>{{ form_label(form.sala) }}</td>
					<td><span class="form-text-input">{{ form_widget(form.sala) }}{{ form_errors(form.sala) }}</span></td>
				</tr>
				<tr>
					<td>{{ form_label(form.termin) }}</td>	
					<td>{{ form_widget(form.termin) }}{{ form_errors(form.termin) }}</td>
				</tr>
				<tr>
					<td colspan="2"><input type="submit" value="Dodaj zajęcia" /></td>
				</tr>
			</table>



			{{ form_end(form) }}

		</div>







	{% endif %}
{% endblock %}

